{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "standard",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/prop-types": 0,
    "prettier/prettier": "error",
    "no-console": "warn",
    "no-var": "error", // preference for let and const only
    "prefer-const": "warn",
    "eqeqeq": "warn" //  warn to use === instead of ==
  },
  "parser": "babel-eslint"
}
