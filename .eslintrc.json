{
	"env": {
		"browser": true,
		"commonjs": true,
		"es2020": true
	},
	"extends": ["standard", "eslint:recommended", "plugin:prettier/recommended"],
	"parserOptions": {
		"ecmaVersion": 11
	},
	"rules": {
		"prettier/prettier": "error",
		"no-console": "warn",
		"no-var": "error", // preference for let and const only
		"prefer-const": "warn",
		"eqeqeq": "warn" //  warn to use === instead of ==
	}
}
